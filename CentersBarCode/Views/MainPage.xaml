<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CentersBarCode.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:CentersBarCode.ViewModels"
    xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
    Title="Centers Barcode Scanner"
    x:DataType="vm:MainViewModel"
    Shell.BackgroundColor="Gray">

    <Grid RowDefinitions="Auto,*,Auto">
        <!--  Main Content  -->
        <VerticalStackLayout
            Grid.Row="0"
            Padding="20"
            Spacing="20">
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="Select a Center" />

            <!--  Centers Dropdown  -->
            <Picker
                Title="Select Center"
                FontSize="20"
                HorizontalOptions="FillAndExpand"
                ItemsSource="{Binding Centers}"
                SelectedItem="{Binding SelectedCenter}" />

            <!--  Scan Button  -->
            <Button
                Command="{Binding OpenQrScannerCommand}"
                HorizontalOptions="FillAndExpand"
                IsEnabled="{Binding CanScan}"
                Text="Scan QR Code" />
        </VerticalStackLayout>

        <!--  QR Scanner Overlay  -->
        <Grid
            Grid.Row="0"
            Grid.RowSpan="3"
            BackgroundColor="Black"
            IsVisible="{Binding IsQrScannerVisible}"
            RowDefinitions="Auto,*,*,*">

            <zxing:CameraBarcodeReaderView
                x:Name="cameraView"
                Grid.Row="2"
                BarcodesDetected="CameraView_BarCodeDetected"
                CameraLocation="Rear"
                HeightRequest="150"
                HorizontalOptions="Fill"
                IsDetecting="True"
                VerticalOptions="Fill"
                WidthRequest="300" />

            <StackLayout
                Grid.Row="2"
                Margin="0,-30,0,0"
                HorizontalOptions="Center"
                Orientation="Horizontal"
                VerticalOptions="Start">
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,0,0"
                    FontSize="14"
                    HorizontalOptions="Center"
                    Text="Position Barcode inside frame"
                    TextColor="White" />

                <Button
                    Grid.Row="1"
                    Margin="0,-10,0,0"
                    BackgroundColor="Transparent"
                    BorderColor="Transparent"
                    Clicked="ToggleFlash_Clicked"
                    FontSize="24"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    Text="💡"
                    WidthRequest="40" />
            </StackLayout>
            <!--  Scan Frame for visual indication  -->
            <Grid
                Grid.Row="2"
                ColumnDefinitions="*,Auto"
                HorizontalOptions="Center"
                RowSpacing="10"
                VerticalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Frame
                    Grid.Row="1"
                    Grid.Column="0"
                    Padding="2"
                    BackgroundColor="Transparent"
                    BorderColor="White"
                    CornerRadius="10"
                    HasShadow="False"
                    HeightRequest="150"
                    HorizontalOptions="Center"
                    WidthRequest="250" />
            </Grid>

            <!--  Controls Grid  -->
            <Grid
                Grid.Row="0"
                Padding="20"
                RowDefinitions="Auto,*,Auto">
                <!--  Top controls  -->
                <VerticalStackLayout
                    Grid.Row="0"
                    HorizontalOptions="Center"
                    Spacing="10">
                    <Label
                        BackgroundColor="Transparent"
                        FontSize="24"
                        HorizontalTextAlignment="Center"
                        Text="{Binding TeacherName}"
                        TextColor="#FFFFFF" />
                    <Label
                        BackgroundColor="Transparent"
                        FontSize="24"
                        HorizontalTextAlignment="Center"
                        Text="{Binding SelectedCenter}"
                        TextColor="#FFFFFF" />


                </VerticalStackLayout>
            </Grid>
            <Grid
                Grid.Row="3"
                Padding="20"
                RowDefinitions="Auto,*,Auto">
                <!--  Bottom controls  -->
                <VerticalStackLayout
                    Grid.Row="2"
                    HorizontalOptions="Center"
                    Spacing="15">
                    <!--  Manual capture button (in case auto-detection doesn't work)  -->
                    <Button
                        BackgroundColor="Green"
                        Clicked="CaptureQrCode_Clicked"
                        HorizontalOptions="Center"
                        IsVisible="False"
                        Text="Capture BarCode"
                        TextColor="White" />

                    <Button
                        Command="{Binding CloseQrScannerCommand}"
                        HorizontalOptions="Center"
                        Text="Close Scanner" />
                </VerticalStackLayout>
            </Grid>
        </Grid>

        <!--  QR Code Result Popup  -->
        <Grid
            Grid.Row="0"
            Grid.RowSpan="3"
            BackgroundColor="#80000000"
            HorizontalOptions="FillAndExpand"
            IsVisible="{Binding IsPopupVisible}"
            VerticalOptions="FillAndExpand">

            <Frame
                Padding="20,20,20,10"
                CornerRadius="10"
                HeightRequest="210"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="300">

                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                    <Label
                        Grid.Row="0"
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="Scanned QR Code" />

                    <Label
                        Grid.Row="1"
                        Margin="0,10,0,0"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Text="{Binding ScannedCode, StringFormat='Code: {0}'}"
                        VerticalOptions="Start" />

                    <Label
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Text="{Binding ScannedName, StringFormat='Name: {0}'}"
                        VerticalOptions="Start" />

                    <Label
                        Grid.Row="3"
                        Margin="0,10,0,0"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Text="{Binding ScannedCenter, StringFormat='Center: {0}'}"
                        VerticalOptions="Start" />

                    <!--  Loading indicator and buttons  -->
                    <StackLayout Grid.Row="4" Margin="0,20,0,0">
                        <!--  Activity Indicator for saving  -->
                        <ActivityIndicator
                            HorizontalOptions="Center"
                            IsRunning="{Binding IsSaving}"
                            IsVisible="{Binding IsSaving}"
                            Color="Green" />

                        <!--  Buttons  -->
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
                            <Button
                                BackgroundColor="Green"
                                Command="{Binding SaveQrCodeCommand}"
                                Text="Save"
                                TextColor="White" />

                            <Button
                                BackgroundColor="Gray"
                                Command="{Binding CancelQrCodeCommand}"
                                Text="Cancel"
                                TextColor="White" />
                        </HorizontalStackLayout>
                    </StackLayout>
                </Grid>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>