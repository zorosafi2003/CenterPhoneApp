<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CentersBarCode.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:CentersBarCode.ViewModels"
    xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
    Title="Centers Barcode Scanner"
    x:DataType="vm:MainViewModel">

    <Grid RowDefinitions="Auto,*,Auto">
        <!--  Main Content  -->
        <VerticalStackLayout
            Grid.Row="0"
            Padding="20"
            Spacing="20">
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="Select a Center" />

            <!--  Centers Dropdown  -->
            <Picker
                Title="Select Center"
                HorizontalOptions="FillAndExpand"
                ItemsSource="{Binding Centers}"
                SelectedItem="{Binding SelectedCenter}" />

            <!--  Scan Button  -->
            <Button
                Command="{Binding OpenQrScannerCommand}"
                HorizontalOptions="FillAndExpand"
                IsEnabled="{Binding CanScan}"
                Text="Scan QR Code" />
        </VerticalStackLayout>

        <!--  QR Scanner Overlay  -->
        <Grid
            Grid.Row="0"
            Grid.RowSpan="3"
            BackgroundColor="Black"
            IsVisible="{Binding IsQrScannerVisible}">

            <zxing:CameraBarcodeReaderView
                x:Name="cameraView"
                BarcodesDetected="CameraView_BarCodeDetected"
                CameraLocation="Rear"
                HeightRequest="150"
                HorizontalOptions="Fill"
                IsDetecting="True"
                VerticalOptions="Fill"
                WidthRequest="300" />

            <!--  Scan Frame for visual indication  -->
            <Grid HorizontalOptions="Center" VerticalOptions="Center">
                <Frame
                    Padding="2"
                    BackgroundColor="Transparent"
                    BorderColor="White"
                    CornerRadius="10"
                    HasShadow="False"
                    HeightRequest="150"
                    WidthRequest="250" />

                <Label
                    Margin="0,-30,0,0"
                    FontSize="14"
                    HorizontalOptions="Center"
                    Text="Position Barcode inside frame"
                    TextColor="White"
                    VerticalOptions="Start" />
            </Grid>

            <!--  Controls Grid  -->
            <Grid Padding="20" RowDefinitions="Auto,*,Auto">
                <!--  Top controls  -->
                <HorizontalStackLayout
                    Grid.Row="0"
                    HorizontalOptions="End"
                    Spacing="10">
                    <Button
                        BackgroundColor="Transparent"
                        BorderColor="Transparent"
                        Clicked="ToggleFlash_Clicked"
                        FontSize="24"
                        HeightRequest="40"
                        Text="💡"
                        WidthRequest="40" />
                </HorizontalStackLayout>

                <!--  Middle section - empty to allow camera view  -->

                <!--  Bottom controls  -->
                <VerticalStackLayout
                    Grid.Row="2"
                    HorizontalOptions="Center"
                    Spacing="15">
                    <!--  Manual capture button (in case auto-detection doesn't work)  -->
                    <Button
                        BackgroundColor="Green"
                        Clicked="CaptureQrCode_Clicked"
                        HorizontalOptions="Center"
                        Text="Capture BarCode"
                        TextColor="White" />

                    <Button
                        Command="{Binding CloseQrScannerCommand}"
                        HorizontalOptions="Center"
                        Text="Close Scanner" />
                </VerticalStackLayout>
            </Grid>
        </Grid>

        <!--  QR Code Result Popup  -->
        <Grid
            Grid.Row="0"
            Grid.RowSpan="3"
            BackgroundColor="#80000000"
            HorizontalOptions="FillAndExpand"
            IsVisible="{Binding IsPopupVisible}"
            VerticalOptions="FillAndExpand">

            <Frame
                Padding="20,20,20,10"
                CornerRadius="10"
                HeightRequest="210"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="300">

                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                    <Label
                        Grid.Row="0"
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="Scanned QR Code" />
                    
                    <Label
                        Margin="0,10,0,0"
                        Grid.Row="1"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Text="{Binding ScannedCode, StringFormat='Code: {0}'}"
                        VerticalOptions="Start" />
                        
                    <Label
                         Margin="0,10,0,0"
                        Grid.Row="2"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Text="{Binding ScannedName, StringFormat='Name: {0}'}"
                        VerticalOptions="Start" />
                        
                    <Label
                         Margin="0,10,0,0"
                        Grid.Row="3"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Text="{Binding ScannedCenter, StringFormat='Center: {0}'}"
                        VerticalOptions="Start" />

                    <!-- Loading indicator and buttons -->
                    <StackLayout Grid.Row="4" Margin="0,20,0,0">
                        <!-- Activity Indicator for saving -->
                        <ActivityIndicator 
                            IsVisible="{Binding IsSaving}"
                            IsRunning="{Binding IsSaving}"
                            Color="Green"
                            HorizontalOptions="Center" />
                        
                        <!-- Buttons -->
                        <HorizontalStackLayout
                            HorizontalOptions="Center"
                            Spacing="30">
                            <Button
                                BackgroundColor="Green"
                                Command="{Binding SaveQrCodeCommand}"
                                Text="Save"
                                TextColor="White" />

                            <Button
                                BackgroundColor="Gray"
                                Command="{Binding CancelQrCodeCommand}"
                                Text="Cancel"
                                TextColor="White" />
                        </HorizontalStackLayout>
                    </StackLayout>
                </Grid>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>
