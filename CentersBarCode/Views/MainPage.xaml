<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CentersBarCode.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:CentersBarCode.ViewModels"
    Title="Centers Barcode Scanner"
    x:DataType="vm:MainViewModel"
    Shell.BackgroundColor="Gray">

    <Grid RowDefinitions="Auto,*,Auto">
        <!--  Main Content  -->
        <VerticalStackLayout
            Grid.Row="0"
            Padding="20"
            Spacing="20">
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="Select a Center" />

            <!--  Centers Dropdown  -->
            <Picker
                Title="Select Center"
                FontSize="20"
                HorizontalOptions="FillAndExpand"
                ItemsSource="{Binding Centers}"
                SelectedItem="{Binding SelectedCenter}" />

            <!--  Scan Buttons  -->
            <Button
                Command="{Binding OpenQrScannerCommand}"
                HorizontalOptions="FillAndExpand"
                Clicked="OnScanClicked"
                IsEnabled="{Binding CanScan}"
                Text="Scan QR Code" />
                
            <!--  Auto Scan Button  -->
            <Button
                Command="{Binding OpenAutoQrScannerCommand}"
                Clicked="OnAutoScanClicked"
                HorizontalOptions="FillAndExpand"
                IsEnabled="{Binding CanScan}"
                BackgroundColor="#1E90FF"
                TextColor="White"
                Text="Auto Scan Mode" />
                
            <!-- Auto Mode Indicator -->
            <Label 
                Text="Auto Scan Mode is ON - Scans will be saved automatically"
                TextColor="#1E90FF"
                FontSize="14"
                HorizontalOptions="Center"
                IsVisible="{Binding IsAutoScanMode}" />
        </VerticalStackLayout>

        <!--  QR Code Result Popup  -->
        <Grid
            Grid.Row="0"
            Grid.RowSpan="3"
            BackgroundColor="#80000000"
            HorizontalOptions="FillAndExpand"
            IsVisible="{Binding IsPopupVisible}"
            VerticalOptions="FillAndExpand">

            <Frame
                Padding="20,20,20,10"
                CornerRadius="10"
                HeightRequest="230"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="300">

                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                    <Label
                        Grid.Row="0"
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="Scanned QR Code" />

                    <Label
                        Grid.Row="1"
                        Margin="0,10,0,0"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Text="{Binding ScannedCode, StringFormat='Code: {0}'}"
                        VerticalOptions="Start" />

                    <Label
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Text="{Binding ScannedName, StringFormat='Name: {0}'}"
                        VerticalOptions="Start" />

                    <Label
                        Grid.Row="3"
                        Margin="0,10,0,0"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Text="{Binding ScannedCenter, StringFormat='Center: {0}'}"
                        VerticalOptions="Start" />

                    <!--  Loading indicator and buttons  -->
                    <StackLayout Grid.Row="4" Margin="0,20,0,0">
                        <!--  Activity Indicator for saving  -->
                        <ActivityIndicator
                            HorizontalOptions="Center"
                            IsRunning="{Binding IsSaving}"
                            IsVisible="{Binding IsSaving}"
                            Color="Green" />

                        <!--  Buttons  -->
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
                            <Button
                                BackgroundColor="Green"
                                Command="{Binding SaveQrCodeCommand}"
                                Text="Save"
                                TextColor="White" />

                            <Button
                                BackgroundColor="Gray"
                                Command="{Binding CancelQrCodeCommand}"
                                Text="Cancel"
                                TextColor="White" />
                        </HorizontalStackLayout>
                    </StackLayout>
                </Grid>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>