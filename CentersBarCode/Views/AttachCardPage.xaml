<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CentersBarCode.Views.AttachCardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:CentersBarCode.ViewModels"
    xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
    Title="{Binding Title}"
    x:DataType="vm:AttachCardViewModel"
    Shell.BackgroundColor="Gray">

    <Grid RowDefinitions="Auto,*,Auto">
        <!--  Main Content  -->
        <VerticalStackLayout
            Grid.Row="0"
            Padding="20"
            Spacing="20">

            <Label
                FontAttributes="Bold"
                FontSize="18"
                HorizontalOptions="Start"
                Text="Phone Number" />

            <!--  Phone Number Input  -->
            <Entry
                x:Name="PhoneEntry"
                FontSize="16"
                HorizontalOptions="FillAndExpand"
                Keyboard="Telephone"
                MaxLength="11"
                Placeholder="Enter 11-digit phone number"
                Text="{Binding PhoneNumber}" />

            <!--  Search Button  -->
            <Button
                Margin="0,10,0,0"
                BackgroundColor="#2196F3"
                Command="{Binding SearchCommand}"
                FontSize="16"
                HorizontalOptions="FillAndExpand"
                IsEnabled="{Binding IsSearchEnabled}"
                Text="Search"
                TextColor="White" />

            <!--  Instructions  -->
            <Label
                Margin="0,20,0,0"
                FontSize="14"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="Enter a valid 11-digit phone number to enable the search button. After clicking search, scan the QR code to attach the card."
                TextColor="Gray" />

        </VerticalStackLayout>

        <!--  QR Scanner Overlay  -->
        <Grid
            Grid.Row="0"
            Grid.RowSpan="3"
            BackgroundColor="Black"
            IsVisible="{Binding IsQrScannerVisible}"
            RowDefinitions="Auto,*,Auto,*">

            <zxing:CameraBarcodeReaderView
                x:Name="cameraView"
                Grid.Row="2"
                BarcodesDetected="CameraView_BarCodeDetected"
                CameraLocation="Rear"
                HeightRequest="150"
                HorizontalOptions="Fill"
                IsDetecting="True"
                VerticalOptions="Fill"
                WidthRequest="300" />

            <StackLayout
                Grid.Row="2"
                Margin="0,-30,0,0"
                HorizontalOptions="Center"
                Orientation="Horizontal"
                VerticalOptions="Start">
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,0,0"
                    FontSize="14"
                    HorizontalOptions="Center"
                    Text="Position Barcode inside frame"
                    TextColor="White" />

                <Button
                    Grid.Row="1"
                    Margin="0,-10,0,0"
                    BackgroundColor="Transparent"
                    BorderColor="Transparent"
                    Clicked="ToggleFlash_Clicked"
                    FontSize="24"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    Text="ðŸ’¡"
                    WidthRequest="40" />
            </StackLayout>

            <!--  Scan Frame for visual indication  -->
            <Grid
                Grid.Row="2"
                ColumnDefinitions="*,Auto"
                HorizontalOptions="Center"
                RowSpacing="10"
                VerticalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackLayout
                    Grid.Row="2"
                    Margin="0,-30,0,0"
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    VerticalOptions="Start">
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,0,0"
                        FontSize="14"
                        HorizontalOptions="Center"
                        Text="Position Barcode inside frame"
                        TextColor="White" />

                    <Button
                        Grid.Row="1"
                        Margin="0,-10,0,0"
                        BackgroundColor="Transparent"
                        BorderColor="Transparent"
                        Clicked="ToggleFlash_Clicked"
                        FontSize="24"
                        HeightRequest="40"
                        HorizontalOptions="Center"
                        Text="ðŸ’¡"
                        WidthRequest="40" />
                </StackLayout>
                <!--  Scan Frame for visual indication  -->
                <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
                    <!--  Top controls  -->
                    <VerticalStackLayout
                        Grid.Row="0"
                        HorizontalOptions="Center"
                        Spacing="10">
                        <Label
                            BackgroundColor="Transparent"
                            FontSize="24"
                            HorizontalTextAlignment="Center"
                            Text="{Binding TeacherName}"
                            TextColor="#FFFFFF" />
                        <Label
                            BackgroundColor="Transparent"
                            FontSize="24"
                            HorizontalTextAlignment="Center"
                            Text="{Binding PhoneNumber}"
                            TextColor="#FFFFFF" />
                        <Label
                            HorizontalTextAlignment="Center"
                            IsVisible="False"
                            Text="{Binding StudentName}"
                            TextColor="#FFFFFF"
                            VerticalOptions="Center" />
                    </VerticalStackLayout>
                </Grid>
            </Grid>
            <!--  Controls Grid  -->
            <Grid
                Grid.Row="3"
                Padding="20"
                RowDefinitions="Auto,*,Auto">

                <Frame
                    Grid.Row="1"
                    Grid.Column="0"
                    Padding="2"
                    BackgroundColor="Transparent"
                    BorderColor="White"
                    CornerRadius="10"
                    HasShadow="False"
                    HeightRequest="150"
                    HorizontalOptions="Center"
                    WidthRequest="250" />


            </Grid>


            <!--  Controls Grid  -->
            <Grid
                Grid.Row="0"
                Padding="20"
                RowDefinitions="Auto,*,Auto">
                <!--  Top controls  -->
                <VerticalStackLayout
                    Grid.Row="0"
                    HorizontalOptions="Center"
                    Spacing="10">
                    <Label
                        BackgroundColor="Transparent"
                        FontSize="24"
                        HorizontalTextAlignment="Center"
                        Text="{Binding TeacherName}"
                        TextColor="#FFFFFF" />
                    <Label
                        BackgroundColor="Transparent"
                        FontSize="24"
                        HorizontalTextAlignment="Center"
                        Text="{Binding PhoneNumber}"
                        TextColor="#FFFFFF" />
                    <Label
                        BackgroundColor="Transparent"
                        FontSize="24"
                        HorizontalTextAlignment="Center"
                        IsVisible="False"
                        Text="{Binding StudentName}"
                        TextColor="#FFFFFF" />
                </VerticalStackLayout>

            </Grid>
            <!--  Controls Grid  -->
            <Grid
                Grid.Row="3"
                Padding="20"
                RowDefinitions="Auto,*,Auto">

                <!--  Middle section - empty to allow camera view  -->

                <!--  Bottom controls  -->
                <VerticalStackLayout
                    Grid.Row="2"
                    HorizontalOptions="Center"
                    Spacing="15">

                    <Button
                        BackgroundColor="Red"
                        Command="{Binding CloseQrScannerCommand}"
                        HorizontalOptions="Center"
                        Text="Close Scanner"
                        TextColor="White" />
                </VerticalStackLayout>
            </Grid>
        </Grid>

        <!--  Processing Indicator  -->
        <Grid
            Grid.Row="2"
            Grid.RowSpan="2"
            BackgroundColor="#80000000"
            HorizontalOptions="FillAndExpand"
            IsVisible="{Binding IsProcessing}"
            VerticalOptions="FillAndExpand">

            <StackLayout
                HorizontalOptions="Center"
                Spacing="20"
                VerticalOptions="Center">

                <ActivityIndicator
                    IsRunning="{Binding IsProcessing}"
                    IsVisible="{Binding IsProcessing}"
                    Scale="1.5"
                    Color="White" />

                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Attaching card..."
                    TextColor="White" />
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>