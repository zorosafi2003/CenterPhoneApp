<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CentersBarCode.Views.AttachCardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:CentersBarCode.ViewModels"
    Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*,Auto">
        <!--  Main Content  -->
        <VerticalStackLayout
            Grid.Row="0"
            Padding="20"
            Spacing="20">

            <Label
                FontAttributes="Bold"
                FontSize="18"
                HorizontalOptions="Start"
                Text="Phone Number" />

            <!--  Phone Number Input  -->
            <Entry
                x:Name="PhoneEntry"
                Completed="PhoneEntry_Completed"
                FontSize="16"
                HorizontalOptions="FillAndExpand"
                Keyboard="Telephone"
                MaxLength="11"
                Placeholder="Enter 11-digit phone number"
                Text="{Binding PhoneNumber}" />

            <!--  Search Button  -->
            <Button
                Margin="0,10,0,0"
                BackgroundColor="#2196F3"
                Clicked="OnSearchClicked"
                Command="{Binding SearchCommand}"
                FontSize="16"
                HorizontalOptions="FillAndExpand"
                IsEnabled="{Binding IsSearchEnabled}"
                Text="Search"
                TextColor="White" />

            <!--  Instructions  -->
            <Label
                Margin="0,20,0,0"
                FontSize="14"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="Enter a valid 11-digit phone number to enable the search button. After clicking search, you will be directed to scan the QR code."
                TextColor="Gray" />

        </VerticalStackLayout>

        <!--  Processing Indicator  -->
        <Grid
            Grid.Row="0"
            Grid.RowSpan="3"
            BackgroundColor="#80000000"
            HorizontalOptions="FillAndExpand"
            IsVisible="{Binding IsProcessing}"
            VerticalOptions="FillAndExpand">

            <StackLayout
                HorizontalOptions="Center"
                Spacing="20"
                VerticalOptions="Center">

                <ActivityIndicator
                    IsRunning="{Binding IsProcessing}"
                    IsVisible="{Binding IsProcessing}"
                    Scale="1.5"
                    Color="White" />

                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Processing..."
                    TextColor="White" />
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>